
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered tab-content">
    <tr>
        <th>
            管理员编号
        </th>
        <th>
            操作内容
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Admin.AdminNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminContent)
            </td>
        </tr>
    }

</table>
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<YueBoAdmin.Models.AdminControl>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<br />

