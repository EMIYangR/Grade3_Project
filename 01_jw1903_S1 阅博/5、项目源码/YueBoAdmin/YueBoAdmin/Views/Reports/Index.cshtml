
@{
    ViewBag.Title = "Index";
}

<div class="row g-3 mb-4 align-items-center justify-content-between">
    <div class="col-auto">
        <h1 class="app-page-title mb-0">用户举报</h1>
    </div>
    <div class="col-auto">
        <div class="page-utilities">
            <div class="row g-2 justify-content-start justify-content-md-end align-items-center">
                <div class="col-auto">
                    <form class="docs-search-form row gx-1 align-items-center" method="post" action="/Reports/Index">
                        <div class="col-auto">
                            <input type="text" id="reportname" name="searchdocs" class="form-control search-docs" placeholder="搜索">
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn app-btn-secondary">搜索</button>
                        </div>
                    </form>

                </div><!--//col-->
            </div><!--//row-->
        </div><!--//table-utilities-->
    </div><!--//col-auto-->
</div><!--//row-->

<table class="table">
    <tr>
        <th>
            举报类型
        </th>
        <th>
            用户昵称
        </th>
        <th>
            用户账号
        </th>
        <th>
            图片
        </th>
        <th>
            视频
        </th>
        <th>
            内容
        </th>
        <th>
            举报描述
        </th>
        <th>
            举报时间
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportType.ReportTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserInfo.UserNick)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserInfo.UserAccount)
            </td>
            <td>
                @if (item.Post.PostPic != "无" && item.Post.PostPic != "" && item.Post.PostPic != null)
                {
                    @Html.DisplayFor(modelItem => item.Post.PostPic)
                }
            </td>
            <td>
                @if (item.Post.PostVideo != "无" && item.Post.PostVideo != "" && item.Post.PostVideo != null)
                {
                    @Html.DisplayFor(modelItem => item.Post.PostVideo)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.PostContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportTime)
            </td>
            <td>
                <a href="/Reports/DeleteReport?id=@item.UserID">删除</a>
            </td>
        </tr>
    }

</table>
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<YueBoAdmin.Models.Report>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<br />

