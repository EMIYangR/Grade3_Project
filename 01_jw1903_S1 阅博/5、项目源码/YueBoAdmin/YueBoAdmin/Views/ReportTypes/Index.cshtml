@model IEnumerable<YueBoAdmin.Models.ReportType>

@{
    ViewBag.Title = "Index";
}

<h2>举报类型</h2>

<p>
    <a id="triggerBtn" class="btn btn-link">添加</a>
</p>
<div id="myModal" class="modal">
    <form action="/ReportTypes/Create" method="post">
        <div class="modal-content">
            <div class="form-horizontal">
                <div class="modal-header">
                    <h2>添加举报类型</h2>
                </div>
                <div class="modal-body">
                    <table>
                        <tr>
                            <th>举报类型名称：</th>
                            <td> <input type="text" name="ReportTypeName" id="ReportTypeName" value="" required /></td>
                        </tr>
                    </table>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="添加" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
</div>
<table class="table table-bordered tab-content">
    <tr>
        <th>
            举报类型名称
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportTypeName)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.ReportTypeID }) |
                <a href="/ReportTypes/DeleteConfirmed/@item.ReportTypeID">删除</a>

            </td>
        </tr>
    }

</table>
